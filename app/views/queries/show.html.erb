<h1><%= @query.title %></h1>

<p><%= @query.body %></p>

<ul>
  <li><%= link_to "Edit", edit_query_path(@query) %></li>
  <li><%= link_to "Destroy", query_path(@query),
                   method: :delete,
                   data: { confirm: "Are you sure?" } %></li>
</ul>

<h2>Comments</h2>
<%= render @query.comments %>


<h2>Add a comment:</h2>
<%=render 'comments/form' %>